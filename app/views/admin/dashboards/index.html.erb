
<p>管理者ログインしないとこれないよ</p>

<h1>全ユーザー一覧</h1>
<h3>検索</h3>
<%= form_with url: admin_dashboards_path, method: :get do |f| %>
  <h4>メールアドレス入力</h4>
  <%= f.text_field :email %>
  <%= f.submit '検索' %>
<% end%>
<ul>
  <% @customers.each do |customer| %>
    <li>
      <%= link_to customer.first_name, admin_dashboard_path(customer) %>-<%= link_to customer.last_name, admin_dashboard_path(customer) %> - <%= customer.email %>
      
      <%= link_to '削除', admin_customer_path(customer), method: :delete, data: { confirm: '本当に削除しますか？' } %>
      <% if customer.is_active == true %>
        <%= "有効" %>
      <% else %>
        <%= "無効" %>
      <% end %>
      <%= link_to "会員ステータス変更", admin_dashboard_path(customer), method: :patch, data: { confirm: '本当に会員ステータス変更させますか？' } %>
    </li>
    
  <% end %>
</ul>