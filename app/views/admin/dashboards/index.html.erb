
<p>管理者ログインしないとこれないよ</p>

<h1>全ユーザー一覧</h1>
<h3>検索</h3>
<%= form_with url: admin_dashboards_path, method: :get do |f| %>
  <%= f.text_field :email %>
  <%= f.submit '検索' %>
<% end%>
<ul>
  <% @customers.each do |customer| %>
    <li>
      <%= customer.last_name %>-<%= customer.first_name %> - <%= customer.email %>
      
      <%= link_to '削除', admin_customer_path(customer), method: :delete, data: { confirm: '本当に削除しますか？' } %>
      <%= customer.is_active %>
      <%= link_to "退会", admin_customer_path(customer), method: :patch, data: { confirm: '本当に退会させますか？' } %>
    </li>
    
  <% end %>
</ul>