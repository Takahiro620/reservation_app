<h1>新商品登録</h1>
<% if @item.errors.any? %>
  <%= @item.errors.count %>件のerrorが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <%= form_with model: @item ,url:admin_items_path do |f| %>
    <h4>商品名</h4>
      <%= f.text_field :name %>
    <h4>説明</h4>
      <%= f.text_area :introduction %>
    <h4>価格</h4>
      <%= f.number_field :price %>
    <%= f.submit '商品登録' %>
  <% end %>