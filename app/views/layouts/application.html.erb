<!DOCTYPE html>
<html>
  <head>
    <title>ReservationApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if customer_signed_in? %>
        <li>
          <%= link_to "トップページ", root_path %>
        </li>
        <li>
          <%= link_to "顧客ログアウト", destroy_customer_session_path, method: :delete %>
        </li>
        <li>
          <%= link_to "マイページ", public_customer_path(current_customer)  %>
        </li>
        <li>
          <%= link_to "顧客向け商品一覧", public_items_path %>
        </li>
      <% else %>
        <li>
          <%= link_to "顧客新規登録", new_customer_registration_path %>
        </li>
        <li>
          <%= link_to "顧客ログイン", new_customer_session_path %>
        </li>
        <li>
          <%= link_to "顧客向け商品一覧", public_items_path %>
        </li>
      <% end %>
      <% if admin_signed_in? %>
        <li>
          <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %>
        </li>
        <li>
          <%= link_to "管理者向け商品一覧", admin_items_path %>
        </li>
      <% else %>
        <li>
          <%= link_to "管理者新規登録", new_admin_registration_path %>
        </li>
        <li>
          <%= link_to "管理者ログイン", new_admin_session_path %>
        </li>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
