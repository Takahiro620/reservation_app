<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User 編集ページ</h2>
      <%= form_with model: @customer, url: public_customer_path do |f| %>
      <div class="form-group">
        <label for="inputName">last_name</label>
        <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control name"%>  
      </div>
      <div class="form-group">
        <label for="inputName">:first_name</label>
        <%= f.text_field :first_name, class: "form-control name"%>  
      </div>
      <div class="form-group">
        <label for="inputName">:last_name_kana</label>
        <%= f.text_field :last_name_kana, class: "form-control name"%>  
      </div>   
      <div class="form-group">
        <label for="inputName">:first_name_kana</label>
        <%= f.text_field :first_name_kana, class: "form-control name"%>  
      </div>         
      <div class="form-group">
        <label for="inputIntroduction">:postal_code</label>
        <%= f.text_field :postal_code, class: "form-control introduction"%>  
      </div>
      <div class="form-group">
        <label for="inputIntroduction">:address</label>
        <%= f.text_field :address, class: "form-control introduction"%>  
      </div>
      <div class="form-group">
        <label for="inputIntroduction">:telephone_number</label>
        <%= f.text_field :telephone_number, class: "form-control introduction"%>  
      </div>     
      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>