<h1>顧客向け商品詳細</h1>
    <div class="form-group">
      <label>商品名</label>
      <%= @items.name %>
    </div>

    <div class="form-group">
      <label>説明</label>
      <%= @items.introduction %>
    </div>
    
    <div class="form-group">
      <label>価格</label>
      <%= @items.price %>
    </div>
      
    <div class="form-group">
      <%= link_to "編集", edit_admin_item_path(@items), class: "btn btn-sm btn-success"  %>
      <%= link_to "削除", admin_item_path(@items), method: :delete, class: "btn btn-sm btn-danger" %>
    </div>