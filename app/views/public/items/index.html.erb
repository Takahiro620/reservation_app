<h1>顧客向け商品一覧</h1>
<thead>
    <tr>
        <th>商品名</th>
        <th>商品詳細</th>
        <th>価格</th>
    </tr>
</thead>
<% @items.each do |item| %>
<tbody>
    <tr>
        <td><%= link_to item.name, public_item_path(item) %></td>
        <td><%= item.introduction %></td>
        <td><%= item.price %></td>
    </tr>
</tbody>
<%= link_to "詳細", public_item_path(item) %>
<% end %>